<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:padding="16dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/word_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="456"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/word_name"
            android:orientation="vertical">
            <TextView
                android:id="@+id/british_phonogram"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/american_phonogram"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <!-- 分割 -->
       <!-- <View
            android:layout_width="0.2px"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_toLeftOf="@+id/voiceurl"/>
-->
        <ImageButton
            android:id="@+id/voiceurl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/volume_play"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>

